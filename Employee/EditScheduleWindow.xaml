<Window x:Class="MyCoffeCupApp.Employee.EditScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCoffeCupApp.Employee"
        mc:Ignorable="d"
             Title="Новая запись" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
        <TextBlock Text="Дата:" Margin="0,0,0,5"/>
        <DatePicker x:Name="dpDate"/>

        <TextBlock Text="Начало (ЧЧ:ММ):" Margin="0,10,0,5"/>
        <TextBox x:Name="txtStart" Text="09:00"/>

        <TextBlock Text="Окончание (ЧЧ:ММ):" Margin="0,10,0,5"/>
        <TextBox x:Name="txtEnd" Text="18:00"/>

        <TextBlock Text="Примечание:" Margin="0,10,0,5"/>
        <TextBox x:Name="txtNote"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Click="BtnCancel_Click" Width="80" Margin="0,0,10,0" Style="{StaticResource Buttons}" FontSize="10"/>
            <Button Name="btnAdd" Content="Добавить" Click="BtnAdd_Click" Width="80" Style="{StaticResource Buttons}" FontSize="10"/>
        </StackPanel>
    </StackPanel>
    </Grid>
</Window>
