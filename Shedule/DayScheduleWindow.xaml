<Window x:Class="MyCoffeCupApp.DayScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCoffeCupApp"
        mc:Ignorable="d"
        Title="DayScheduleWindow" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с датой -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <TextBlock x:Name="txtDate" FontSize="18" FontWeight="Bold"/>
            <TextBlock x:Name="txtDayOfWeek" FontSize="14" Margin="10,0,0,0" 
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Расписание -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel x:Name="spSchedule" HorizontalAlignment="Center">
                <TextBlock x:Name="txtNoSchedule" Text="Графика пока нет" 
                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                          FontSize="16" Foreground="Gray" Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
  
    </Grid>
</Window>
